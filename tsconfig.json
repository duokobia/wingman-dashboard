{
  "compilerOptions": {
    "target": "esnext", // or "es5"
    "module": "esnext",
    "jsx": "react-jsx", // Use "react-jsx" for React 17+ with new JSX transform
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["react", "react-dom", "react-paginate"]
  },
  "include": ["src/**/*", "react.d.ts"] 
}
